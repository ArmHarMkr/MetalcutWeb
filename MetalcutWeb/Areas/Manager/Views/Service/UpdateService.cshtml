@model ServiceEntity

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Service</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" asp-area="Manager" asp-controller="Service" asp-action="CreateService">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="StartRangeAmount" class="form-label">Start Range Amount</label>
                    <input asp-for="StartRangeAmount" class="form-range" type="range" min="0" max="1000" step="0.01"
                           oninput="this.nextElementSibling.value = this.value" />
                    <output class="ms-2">@Model.StartRangeAmount</output>
                    <span asp-validation-for="StartRangeAmount" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="EndRangeAmount" class="form-label">End Range Amount</label>
                    <input asp-for="EndRangeAmount" class="form-range" type="range" min="0" max="1000" step="0.01"
                           oninput="this.nextElementSibling.value = this.value" />
                    <output class="ms-2">@Model.EndRangeAmount</output>
                    <span asp-validation-for="EndRangeAmount" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Service" asp-action="GetAllServices" asp-area="Manager" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
