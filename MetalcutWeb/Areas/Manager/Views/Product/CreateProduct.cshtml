@using MetalcutWeb.Areas.Manager.ViewModel
@model ProductViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" asp-action="CreateProduct" enctype="multipart/form-data">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductEntity.ProdName" class="form-control border-0 shadow" />
                    <label asp-for="ProductEntity.ProdName" class="ms-2">Product Name</label>
                    <span asp-validation-for="ProductEntity.ProdName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductEntity.ProdDescription" class="form-control border-0 shadow" />
                    <label asp-for="ProductEntity.ProdDescription" class="ms-2">Product Description</label>
                    <span asp-validation-for="ProductEntity.ProdDescription" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Image" type="file" class="form-control border-0 shadow" />
                    <label asp-for="Image" class="ms-2">Product Image</label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductEntity.Price" class="form-control border-0 shadow" type="number" />
                    <label asp-for="ProductEntity.Price" class="ms-2"></label>
                    <span asp-validation-for="ProductEntity.Price" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="AllProducts" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
