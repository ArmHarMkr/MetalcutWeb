@model OrderEntity

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Order</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" asp-area="Customers" asp-controller="Order" asp-action="EditOrder" asp-route-id="@Model.Id">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CustomerName" class="form-control border-0 shadow" />
                    <label asp-for="CustomerName" class="ms-2">Product Name</label>
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="OrderDescription" class="form-control border-0 shadow" />
                    <label asp-for="OrderDescription" class="ms-2">Product Description</label>
                    <span asp-validation-for="OrderDescription" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CustomerPhone" class="form-control border-0 shadow" type="number" />
                    <label asp-for="CustomerPhone" class="ms-2"></label>
                    <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="OrderPrice" class="form-control border-0 shadow" type="number" />
                    <label asp-for="OrderPrice" class="ms-2"></label>
                    <span asp-validation-for="OrderPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="OrderCreatedDate" class="form-control border-0 shadow" type="datetime-local" />
                    <label asp-for="OrderCreatedDate" class="ms-2"></label>
                    <span asp-validation-for="OrderCreatedDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="OrderFinishDate" class="form-control border-0 shadow" type="datetime-local" />
                    <label asp-for="OrderFinishDate" class="ms-2"></label>
                    <span asp-validation-for="OrderFinishDate" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Order" asp-action="Index" asp-area="Customers" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>